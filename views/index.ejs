      // Show login modal on page load (only once)
      window.addEventListener("DOMContentLoaded", () => {
        setTimeout(() => {
          const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
          loginModal.show();
        }, 1200);

      });
    }
  </script>

